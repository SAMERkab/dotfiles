{{ range .profiles -}}
[includeIf "gitdir:~/Development/{{ .username }}/"]
	path = ~/Development/{{ .username }}/.gitconfig
{{ end }}

[commit]
	verbose = true

[alias]
	df = diff --ignore-all-space --color-words
	l = log --graph --decorate --pretty=oneline --abbrev-commit
	s = status --short

[credential "https://codeberg.org"]
	provider = generic
