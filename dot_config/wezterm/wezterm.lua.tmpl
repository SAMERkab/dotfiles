local wezterm = require "wezterm"
local config = wezterm.config_builder()

-- set initial position
wezterm.on('gui-startup', function(cmd) 
  local tab, pane, window = wezterm.mux.spawn_window(cmd or {position={x=-5, y=-2}})
end)
config.initial_rows = 15
config.initial_cols = 172
config.window_decorations = "RESIZE"
config.window_padding = {
  left = 8,
  right = 0,
  top = 6,
  bottom = 0,
}

config.default_prog = { "{{ env "SHELL" -}}" }

config.font_size = 12
config.font = wezterm.font("FiraCode Nerd Font"--[[ , { weight = "Bold" } ]]) -- Consolas | JetBrains Mono
config.color_scheme = "Afterglow (Gogh)"

local env_color_scheme = os.getenv("MY_THEME")
local builtin_color_schemes = wezterm.get_builtin_color_schemes()
if builtin_color_schemes[env_color_scheme] then
    config.color_scheme = env_color_scheme
end

config.window_frame = {
  font = wezterm.font { family = "Roboto", weight = "Bold" },
  font_size = 12.0,
}

return config
